# EditorConfig for cachyos-configs
# Location: <repo-root>/.editorconfig
# Enforces consistent whitespace and line endings across editors.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.jsonc]
indent_size = 2

[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

[*.kdl]
indent_size = 4

[*.fish]
indent_size = 4

[vim/**]
indent_size = 4

[*.{diff,patch}]
trim_trailing_whitespace = false
insert_final_newline = true