// Niri layout configuration.
// Location: ~/.config/niri/cfg/layout.kdl
// Documentation: https://github.com/YaLTeR/niri/wiki/Configuration:-Layout

layout {
    // Gap size between windows (in logical pixels).
    gaps 16 // Gap between windows

    // Auto-centering policy for the focused column.
    center-focused-column "never" // Donâ€™t auto-center focused column

    // Transparent background to allow the shell to render wallpaper.
    background-color "transparent" // <- needed for noctalia-shell to set wallpaper

    // Preset column widths available for cycling.
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    // Default column width when creating new columns.
    default-column-width { proportion 1.0; }

    // Reserved screen edges for panels/bars (empty = disabled).
    struts {}
}
